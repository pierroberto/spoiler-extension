{
  "manifest_version": 2,
  "name": "Spoiler",
  "version": "0.1",
  "description": "Spoiler alert for movies, tv series, sport, etc.",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.js", "content.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "activeTab",
    "*://*/*"
  ]
}
